{
  "name": "unit",
  "repository": "https://github.com/hihayk/unit",
  "license": "MIT",
  "dependencies": {
    "polished": "^1.3.0",
    "react-storybook-addon-props-combinations": "^0.4.1",
    "styled-components": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^15.6.1"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^3.1.9",
    "@storybook/addon-options": "^3.1.6",
    "@storybook/react": "^3.1.9",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "prettier-standard": "^6.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "storybook-addon-jsx": "^4.1.1",
    "validate-commit-msg": "^2.13.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "fileName": false
        }
      ]
    ]
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "lint:js",
        "git add"
      ],
      "stories/**/*.js": [
        "lint:js",
        "git add"
      ]
    }
  },
  "scripts": {
    "lint:js": "prettier-standard",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  }
}
